{{!-- 
  Input text
  @dataAction (string): text for data-action attribute
  @id (string): text for id value
  @name (string): text for name value
  @placeholderText (string): text for input placeholder
  @min (number): min number
  @max (number): max number
  @value (number): initial value of input
--}}
<input
  type="number"
  class="input-number{{#if classNames}} {{classNames}}{{/if}}"
  min="{{min}}"
  max="{{max}}"
  {{#if placeholderText}}placeholder="{{placeholderText}}"{{/if}}
  {{#if id}}id="{{id}}"{{/if}}
  {{#if name}}name="{{name}}"{{/if}}
  {{#if dataAction}}data-action="{{dataAction}}"{{/if}}
  {{#if value}}value="{{value}}"{{/if}}
/>